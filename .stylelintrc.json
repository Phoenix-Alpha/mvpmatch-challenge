{
  "extends": "stylelint-config-standard",
  "rules": {
    "string-quotes": "single",
    "alpha-value-notation": "number",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "for",
          "mixin",
          "tailwind"
        ]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global"]
      }
    ]
  }
}
